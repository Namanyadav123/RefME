<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="UseCompoundDrawables">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="90dp"
        android:src="@drawable/download"
        android:id="@+id/books2chem1"
        android:layout_height="100dp"
        tools:ignore="ContentDescription" />
    <TextView
        android:layout_width="90dp"
        android:text="Schaum's College Chemistry"
        android:paddingLeft="25dp"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
  </LinearLayout>
    <LinearLayout
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="90dp"
        android:src="@drawable/download"
        android:id="@+id/books2chem2"
        android:layout_height="100dp"
        tools:ignore="ContentDescription" />
    <TextView
        android:layout_width="90dp"
        android:text="Schaum's College Chemistry(2)"
        android:paddingLeft="15dp"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="90dp"
            android:src="@drawable/download"
            android:id="@+id/books2chem3"
            android:layout_height="100dp"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_width="80dp"
            android:text="Green Chemistry"
            android:paddingLeft="15dp"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
    </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:paddingTop="20dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="90dp"
            android:src="@drawable/download"
            android:id="@+id/books2chem4"
            android:layout_height="100dp"
            tools:ignore="ContentDescription" />
        <TextView
            android:layout_width="95dp"
            android:text="Instrumental Method Of Analysis"
            android:paddingLeft="15dp"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
    </LinearLayout>

</LinearLayout>
</LinearLayout>