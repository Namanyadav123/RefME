<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="@color/colorAccent7"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/circleimage"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="1dp"
        android:background="#3e0240"
        android:src="@drawable/dtu"
        android:layout_width="100dp"
        android:layout_height="90dp" />

    <LinearLayout
        android:id="@+id/image_container"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/circleimage"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:background="#810e25"
        tools:ignore="ObsoleteLayoutParam,RtlHardcoded,RtlSymmetry">

        <TextView
            android:id="@+id/miwok"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="1st YEAR"
            android:background="@color/colorAccent7"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/default2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            android:text="GROUP-A"
            android:background="@color/colorAccent7"
            tools:ignore="HardcodedText" />
    </LinearLayout>


</LinearLayout>