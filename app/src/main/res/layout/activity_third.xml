<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:background="#0c65ea"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image65"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="#24495c"
        android:src="@drawable/one"
        android:contentDescription="desc"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/text_container2"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/image65"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:background="#0c65ea"
        tools:ignore="ObsoleteLayoutParam,RtlHardcoded,RtlSymmetry">

        <TextView
            android:id="@+id/miwok_text_view2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="1st YEAR"
            android:background="#0c65ea"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/default_text_view2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            android:text="GROUP-A"
            android:background="#0c65ea"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>