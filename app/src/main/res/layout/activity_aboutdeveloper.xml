<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent">
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:text="APP IDEA | APP DESIGN "
        android:layout_height="40dp"
        tools:ignore="HardcodedText,SpUsage" />
    <TextView
        android:layout_width="wrap_content"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:text="        APP DEVELOPER"
        android:layout_height="80dp"
        tools:ignore="HardcodedText,SpUsage" />

<TextView
    android:layout_width="wrap_content"
    android:text="NEWTON'S APPLE"
    android:textColor="#6b4646"
    android:textSize="24sp"
    android:textStyle="italic"
    android:layout_marginBottom="14dp"
    android:layout_marginLeft="100dp"
    android:layout_height="wrap_content"
    tools:ignore="HardcodedText,RtlHardcoded" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/naman"
        android:layout_width="88dp"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="1dp"
        android:layout_height="88dp"
        android:background="#000000"
        android:src="@drawable/naman"
        android:contentDescription="desc"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="match_parent"
        android:paddingLeft="50dp"
        android:textSize="40sp"
        android:paddingBottom="25dp"
        android:textStyle="bold"
        android:textColor="#c1a6a6"
        android:text="NAMAN  YADAV"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text="SECOND YEAR | DTU'20"
        android:textColor="#917272"
        android:textSize="23sp"
        android:textStyle="italic"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="70dp"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,RtlHardcoded" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<TextView
    android:layout_width="180dp"
    android:text="Electronics And Communication Engineering (ECE)"
    android:paddingTop="10dp"
    android:layout_marginLeft="16dp"
    android:textStyle="bold"
    android:textColor="#FFFFFF"
    android:textSize="20sp"
    android:layout_height="90dp"
    tools:ignore="HardcodedText,RtlHardcoded" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/naman3"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginTop="10dp"
        app:civ_border_color="#000000"
        app:civ_border_width="1dp"
        android:background="#000000"
        android:src="@drawable/insta"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="45dp"
        android:contentDescription="desc"
        tools:ignore="HardcodedText,RtlHardcoded" />
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:textSize="17sp"
        android:paddingTop="95dp"
        android:paddingLeft="5dp"
        android:textColor="#ccb2b2"
        android:textStyle="bold"
        android:text="Ideas And Papers Provided By:-"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
    <TextView
        android:layout_width="match_parent"
        android:textSize="17sp"
        android:paddingLeft="5dp"
        android:textColor="#8e8888"
        android:textStyle="normal"
        android:text="Rakshit Sahay(ECE)  |  Pooja Mahto(ECE)"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />


</LinearLayout>
    </ScrollView>