<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:background="#1398b6"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image6"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:background="#12d716"
        android:src="@drawable/ac"
        android:contentDescription="desc"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/image6"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:background="#1398b6"
        tools:ignore="ObsoleteLayoutParam,RtlHardcoded,RtlSymmetry">

        <TextView
            android:id="@+id/miwok_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="Dr.Saurabh Mehta"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/default_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            android:text="9824624632"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>