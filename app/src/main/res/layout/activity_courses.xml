<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:background="#ff6302"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image55"
        android:layout_width="88dp"
        app:civ_border_color="#968a8a"
        app:civ_border_width="1dp"
        android:layout_height="98dp"
        android:background="#cc601d"
        android:src="@drawable/one"
        android:contentDescription="desc"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/text_container1"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/image55"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:background="#ff6302"
        tools:ignore="ObsoleteLayoutParam,RtlHardcoded,RtlSymmetry">

        <TextView
            android:id="@+id/miwok_text_view1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="1st YEAR"
            android:background="#ff6302"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/default_text_view1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            android:text="GROUP-A"
            android:background="#ff6302"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>