<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_second"
    android:layout_width="match_parent"
    android:background="@drawable/fill7"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="8dp"
    tools:context="io.app.hasura.imad.namanyadav123.mydtu.SecondFragment">

    <!--to get the path between two different locations follow these steps <Follow>
    1.)First Let the map load and then zoom in the map to get the area of dtu and
    then tap the screen to place the green  marker
    on origin position and then tap the destination position to place the red marker ,
     Wait For Sometimes And then You Will See A
     Red Path
     2.)The Search Bar Above Takes To The Particular area in whci u
      want a particular location-->


<RelativeLayout
android:layout_width="wrap_content"
android:layout_height="wrap_content">
    <com.cuboid.cuboidcirclebutton.CuboidButton
        android:id="@+id/hint"
        app:cub_border_radius="4dp"
        app:cub_color="#5a187bb9"
        android:textColor="#FFFFFF"
        android:gravity="clip_horizontal"
        android:text="HOW TO USE"
        app:cub_hover_color="#fafafa"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cub_border_color="#000000"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded" />

</RelativeLayout>

    <com.cuboid.cuboidcirclebutton.CuboidButton
        android:id="@+id/lab"
        app:cub_border_radius="4dp"
        app:cub_color="#5a187bb9"
        android:textColor="#FFFFFF"
        android:gravity="clip_horizontal"
        android:text="LAB   LOCATION"
        app:cub_hover_color="#fafafa"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cub_border_color="#000000"
        android:layout_marginLeft="8dp"
        android:layout_alignParentTop="true"
        tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded" />

    <com.cuboid.cuboidcirclebutton.CuboidButton
        android:id="@+id/button2"
        app:cub_border_radius="4dp"
        app:cub_color="#5a187bb9"
        android:textColor="#FFFFFF"
        android:gravity="clip_horizontal"
        android:text="GET STARTED"
        app:cub_hover_color="#fafafa"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cub_border_color="#000000"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded" />

</LinearLayout>
